{{> partials/header}}
<div class="section-form">
   
                    <div class="form-items">
                        <h3>Registre um novo pokemon</h3>
                        <form method="POST" class="requires-validation" enctype="multipart/form-data"  action="/api/create">
                            <div class="col-md-12">
                               <input class="form-control" type="text" name="name" placeholder="Nome do pokemon" required>
                            </div>
                            <div class="col-md-12">
                               <input class="form-control" type="file" name="file" placeholder="arquivo" >
                            </div>
                            <div class="base">
                                <div class="col-md-2">
                                    <input class="form-control" type="number" name="HP" placeholder="HP" required>
                                </div>
                                <div class="col-md-2">
                                    <input class="form-control" type="number" name="Attack" placeholder="Attack" required>
                                </div>
                                <div class="col-md-2">
                                    <input class="form-control" type="number" name="Defense" placeholder="Defense" required>
                                </div>
                                <div class="col-md-2">
                                    <input class="form-control" type="number" name="Speed" placeholder="Speed" required>
                                </div>
                            </div>
                            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                            {{#tipo}}
                                    <input type="checkbox" name="type" class="btn-check" value="{{.}}" id="{{.}}" autocomplete="off">
                                    <label class="btn btn-outline-primary"  for="{{.}}">{{.}}</label>
                            {{/tipo}}
                             </div>
                           
                          
                    
                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Criar</button>
                            </div>
                        </form>
                    </div>
                    </div>
          
{{> partials/footer}}